<UserControl x:Class="ChessWPF.Board"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChessWPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Resources>
            <local:BoolToBrushConverter x:Key="btbc"></local:BoolToBrushConverter>
        </Grid.Resources>
        <Rectangle  HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"
               Fill="{Binding ElementName=cbxIsBlack, Path=IsChecked, Converter={StaticResource btbc}}"
               Width="800" Height="450" Stroke="Black"/>
        <CheckBox Name="cbxIsBlack" Content="" HorizontalAlignment="Left" Margin="384,107,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
        <Image Name="imgChessPiece" HorizontalAlignment="Left" Height="333" Margin="255,68,0,0" VerticalAlignment="Top" Width="278"/>
    </Grid>
</UserControl>
